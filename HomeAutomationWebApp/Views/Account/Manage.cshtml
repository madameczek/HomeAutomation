@model HomeAutomationWebApp.Models.ViewModels.ManageViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Account Details</h1>
@ViewBag.Id

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @User.Identity.Name.Substring(0, User.Identity.Name.IndexOf('_'))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @User.Identity.Name.Substring(User.Identity.Name.IndexOf('_') + 1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Email
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Phone
        </dd>
    </dl>
</div>

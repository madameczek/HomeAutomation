@using Microsoft.AspNetCore.Identity
@using HomeAutomationWebApp.Models.DbModels;
@inject SignInManager<IotUser> SignInManager
@inject UserManager<IotUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Manage" title="Manage">Hello @User.Identity.Name.Substring(0, User.Identity.Name.IndexOf('_'))!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-controller="Account" asp-action="Logout")">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Registration">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul>
